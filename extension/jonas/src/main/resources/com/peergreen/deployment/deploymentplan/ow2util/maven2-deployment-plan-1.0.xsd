<xsd:schema
  targetNamespace="http://jonas.ow2.org/ns/deployment-plan/maven2/1.0"
  xmlns="http://jonas.ow2.org/ns/deployment-plan/maven2/1.0"
  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  xmlns:m2="http://jonas.ow2.org/ns/deployment-plan/maven2/1.0"
  xmlns:plan="http://jonas.ow2.org/ns/deployment-plan/1.0"
  elementFormDefault="qualified">

  <xsd:import namespace="http://jonas.ow2.org/ns/deployment-plan/1.0"
    schemaLocation="deployment-plan-1.0.xsd" />

  <xsd:complexType name="maven2-deploymentType">
    <xsd:annotation>
      <xsd:documentation>
        maven2-deploymentType is a deploymentType where the resource is
        an artifact managed by Maven.
      </xsd:documentation>
    </xsd:annotation>
    <xsd:complexContent>
      <xsd:extension base="plan:deploymentType">
        <xsd:sequence>
          <xsd:element name="groupId">
            <xsd:annotation>
              <xsd:documentation>
                The maven groupId for the artifact.
              </xsd:documentation>
            </xsd:annotation>
            <xsd:simpleType>
              <xsd:restriction base="xsd:string">
                <xsd:whiteSpace value="collapse" />
              </xsd:restriction>
            </xsd:simpleType>
          </xsd:element>
          <xsd:element name="artifactId">
            <xsd:annotation>
              <xsd:documentation>
                The maven artifactId for the artifact.
              </xsd:documentation>
            </xsd:annotation>
            <xsd:simpleType>
              <xsd:restriction base="xsd:string">
                <xsd:whiteSpace value="collapse" />
              </xsd:restriction>
            </xsd:simpleType>
          </xsd:element>
          <xsd:element name="classifier" minOccurs="0" maxOccurs="1">
            <xsd:annotation>
              <xsd:documentation>
                The maven classifier for the artifact.
              </xsd:documentation>
            </xsd:annotation>
            <xsd:simpleType>
              <xsd:restriction base="xsd:string">
                <xsd:whiteSpace value="collapse" />
              </xsd:restriction>
            </xsd:simpleType>
          </xsd:element>
          <xsd:element name="version">
            <xsd:annotation>
              <xsd:documentation>
                The artifact version.
              </xsd:documentation>
            </xsd:annotation>
            <xsd:simpleType>
              <xsd:restriction base="xsd:string">
                <xsd:whiteSpace value="collapse" />
              </xsd:restriction>
            </xsd:simpleType>
          </xsd:element>
          <xsd:element name="type" minOccurs="0" maxOccurs="1">
            <xsd:annotation>
              <xsd:documentation>
                The maven type of the artifact.
              </xsd:documentation>
            </xsd:annotation>
            <xsd:simpleType>
              <xsd:restriction base="xsd:string">
                <xsd:whiteSpace value="collapse" />
              </xsd:restriction>
            </xsd:simpleType>
          </xsd:element>
        </xsd:sequence>
      </xsd:extension>
    </xsd:complexContent>
  </xsd:complexType>
  <xsd:element name="deployment" type="maven2-deploymentType" />

</xsd:schema>

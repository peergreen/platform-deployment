<xsd:schema
  targetNamespace="http://jonas.ow2.org/ns/deployment-plan/url/1.0"
  xmlns="http://jonas.ow2.org/ns/deployment-plan/url/1.0"
  xmlns:xsd="http://www.w3.org/2001/XMLSchema"
  xmlns:plan="http://jonas.ow2.org/ns/deployment-plan/1.0"
  elementFormDefault="qualified">

  <xsd:import namespace="http://jonas.ow2.org/ns/deployment-plan/1.0"
    schemaLocation="deployment-plan-1.0.xsd" />

  <xsd:complexType name="url-deploymentType">
    <xsd:annotation>
      <xsd:documentation>
        url-deploymentType is a deploymentType where the resource is
        hosted on a repository that can be accessed by a simple URL
        (local directory, http, ftp, ...)
      </xsd:documentation>
    </xsd:annotation>
    <xsd:complexContent>
      <xsd:extension base="plan:deploymentType">
        <xsd:sequence>
          <xsd:element name="resource">
            <xsd:annotation>
              <xsd:documentation>
                The resource path starting from the repository.
              </xsd:documentation>
            </xsd:annotation>
            <xsd:simpleType>
              <xsd:restriction base="xsd:string">
                <xsd:whiteSpace value="collapse" />
              </xsd:restriction>
            </xsd:simpleType>
          </xsd:element>
        </xsd:sequence>
      </xsd:extension>
    </xsd:complexContent>
  </xsd:complexType>

  <!-- Is that useful? -->
  <xsd:element name="deployment" type="url-deploymentType" />
</xsd:schema>
